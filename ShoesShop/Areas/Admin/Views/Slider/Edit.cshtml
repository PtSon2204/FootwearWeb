@model SliderModel

@{
	ViewData["title"] = "Edit Slider";
}
<h4>Edit Slider</h4>
<div class="col-md-9">
	<form asp-action="Edit" enctype="multipart/form-data">
		<input type="hidden" asp-for="@Model.Id"/>
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group">
			<label>Name</label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger" />
		</div>
		<div class="form-group">
			<label>Description</label>
			<textarea asp-for="Description" class="form-control"></textarea>
			<span asp-validation-for="Description" class="text-danger" />
		</div>
		<div class="form-group">
			<label>Status</label><br />

			<select asp-for="Status" class="form-control">
				@if(Model.Status == 1) {}
				<option selected value="1">Hiển thị</option>
				<option value="0">Ẩn</option>
				}
				else {
				<option selected value="1">Hiển thị</option>
				<option value="0">Ẩn</option>
				}
			</select>

			<span asp-validation-for="Status" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label>Image</label>
			<input asp-for="ImageUpload" class="form-control" />
			<span asp-validation-for="ImageUpload" class="text-danger" />
			<img id="oldImage" src="~/media/sliders/@Model.Image" width="120" />
			<img id="imgpreview" class="pt-2" />
		</div>

		<div class="form-group">
			<button class="btn btn-primary">Update</button>
		</div>
	</form>
	<a asp-action="Index">Back to List slider</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	<script src="//cdn.ckeditor.com/4.22.1/standard/ckeditor.js"></script>
	<script>
		$("#ImageUpload").change(function() {
			$("#oldImage").hide();
			readURL(this);
		})
	</script>
	<script>
		CKEDITOR.replace( 'Description' );
	</script>
}
