@model BrandModel

@{
	ViewData["title"] = "Edit Brand";
}
<h4>Edit Brand</h4>
<div class="col-md-9">
	<form asp-action="Edit" enctype="multipart/form-data">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group">
			<label>Name</label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger" />
		</div>
		<div class="form-group">
			<label>Description</label>
			<textarea asp-for="Description" class="form-control"></textarea>
			<span asp-validation-for="Description" class="text-danger" />
		</div>
		<div class="form-group">
			<label>Status</label><br>
			<div class="form-check form-check-inline">
				<input class="form-check-input" type="radio" asp-for="Status" value="1" id="show">
				<label class="form-check-label" for="show">Hiển thị</label>
			</div>
			<div class="form-check form-check-inline">
				<input class="form-check-input" type="radio" asp-for="Status" value="0" id="hide">
				<label class="form-check-label" for="hide">Ẩn</label>
			</div>
			<span asp-validation-for="Status" class="text-danger"></span>
		</div>

		<div class="form-group">
			<button class="btn btn-primary">Update</button>
		</div>
	</form>
	<a asp-action="Index">Back to List Category</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}

