@model IEnumerable<OrderDetails>
@{
    ViewData["title"] = "Order Details";
    decimal total = 0;
    decimal subtotal = 0;

    string currentOrderCode = Model.Any() ? Model.First().OrderCode : "";
    int currentStatus = ViewBag.CurrentStatus ?? 1;
}

<h1>List OrderDetails</h1>
@Html.AntiForgeryToken()

<input type="hidden" id="OrderCodeToUpdate" value="@currentOrderCode" />

<table class="table" id="detail_order">
	<thead>
		<tr>
			<th>Id</th>
			<th >Order Code</th>
			<th> Username</th>
			<th>Product Name</th>
			<th>Product Price</th>
			<th>Quantity</th>
			<th>Subtotal</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			subtotal = item.Quantity * item.Price;
			total += subtotal;
			<tr>
				<td>@item.Id</td>
				<td>@item.OrderCode</td>
				<td>@item.UserName</td>
				<td>@item.Product.Name</td>
				<td>@item.Price.ToString("#,##0 VND")</td>
				<td>@item.Quantity</td>
				<td>@subtotal.ToString("#,##0 VND")</td>
			</tr>
		}
		<tr>
			<td>Total:</td>
			<td></td>
			<td></td>
			<td></td>
			<td></td>
			<td>@total.ToString("#,##0 VND")</td>
			
            <td>
				<select class="form-control select-update-order">
					<option value="1" selected="@(currentStatus == 1)">New order</option>
					<option value="2" selected="@(currentStatus == 2)">Processing</option>
					<option value="3" selected="@(currentStatus == 3)">Success</option>
					<option value="0" selected="@(currentStatus == 0)">Reject</option>
				</select>
			</td>
		</tr>
		
	</tbody>
</table>
@section Scripts {
	<script>
		 new DataTable('#detail_order', {
			 layout: {
				topStart: {
				   buttons: ['pdf', 'print']
			   }
			}
		});
	</script>
	<script>
		$(document).ready(function () {
			$('.select-update-order').change(function () {
				var status = $(this).val();
                
				var ordercode = $('#OrderCodeToUpdate').val();

                if (!ordercode) {
                    Swal.fire("Error", "Do not find ordercode to update.", "error");
                    return;
                }

				$.ajax({
					type: "POST",
					url: "@Url.Action("UpdateOrder", "Order", new { area = "Admin" })",
					data: {
						status: status,
						ordercode: ordercode,
						__RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
					},
					success: function (result) {
		                if (result.success) {
			               Swal.fire("Update successfully!", result.message, "success").then(() => {
                               window.location.reload(); 
			               });
		                }
					    else {
							Swal.fire("Update fail!", result.message || "Undefined!.", "warning");
						}
					},
                    error: function (xhr, status, error) {
                        var errorMessage = "Error HTTP: " + xhr.status + " " + error;
                        
                        try {
                            var jsonError = JSON.parse(xhr.responseText);
                            errorMessage = jsonError.message || errorMessage;
                        } catch (e) {
                            if (xhr.status === 404) {
                                errorMessage = "Path ordercode not exists.";
                            } else if (xhr.status === 400) {
                                errorMessage = "Not valid. (Lỗi CSRF Token)";
                            }
                        }
                        
                        Swal.fire("Update fail!", errorMessage, "error");
                    }
				});
			});
		});
	</script>
}