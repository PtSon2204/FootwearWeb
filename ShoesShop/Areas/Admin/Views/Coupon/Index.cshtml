@model CouponModel

@{
	ViewData["title"] = "Create Coupon";
}
<h4>Create Coupon</h4>
<div class="col-md-9">
	<form asp-action="Create" autocomplete="off" enctype="multipart/form-data">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group">
			<label>Name</label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger" />
		</div>
		<div class="form-group">
			<label>Description</label>
			<textarea asp-for="Description" class="form-control"></textarea>
			<span asp-validation-for="Description" class="text-danger" />
		</div>

		<div class="form-group">
			<label>Date Start</label>
			<input asp-for="DateStart" class="form-control" />
			<span asp-validation-for="DateStart" class="text-danger" />
		</div>
		<div class="form-group">
			<label>Date Expired</label>
			<input asp-for="DateExpired" class="form-control" />
			<span asp-validation-for="DateExpired" class="text-danger" />
		</div>
		<div class="form-group">
			<label>Status</label><br />

			<input type="radio" asp-for="Status" value="1" id="show" />
			<label for="show">Hiển thị</label>

			<input type="radio" asp-for="Status" value="0" id="hide" class="ml-3" />
			<label for="hide">Ẩn</label>

			<span asp-validation-for="Status" class="text-danger"></span>
		</div>
		<div class="form-group">
			<button class="btn btn-primary">Create</button>
		</div>
	</form>

	<table class="table" id="myTable">
		<thead>
			<tr>
				<th scope="col"> Name</th>
				<th scope="col"> Description</th>
				<th scope="col"> Date Started</th>
				<th scope="col"> Date Expired</th>
				<th scope="col"> Quantity</th>
				<th scope="col">Active</th>
				<th scope="col">Status</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in ViewBag.Coupons)
			{
				<tr>
					<td>@item.Name</td>
					<td>@Html.Raw(@item.Description)</td>
					<td>@item.DateStart.ToString("dd-MM-yyyy")</td>
					<td>@item.DateExpired.ToString("dd-MM-yyyy")</td>
					<td>@item.Quantity</td>
					<td>
						@if (item.Status == 1)
						{
							<select>
								<option selected value="1">Hiển thị</option>
								<option value="0">Ẩn</option>
							</select>
						}
						else
						{
							<select>
								<option value="1">Hiển thị</option>
								<option selected value="0">Ẩn</option>
							</select>
						}
					</td>
					<td>
						@if (item.DateExpired < DateTime.Now)
						{
							<span class="text text-danger">Expired</span>
						}
						else
						{
							TimeSpan remainingTime = item.DateExpired - DateTime.Now;
							int daysRemaining = remainingTime.Days;
							@if(daysRemaining == 0)
							{
								<span class="text text-danger">Today</span>
							}
							else
							{
								<span class="text text-success">@daysRemaining days left</span>
							}
						}
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}

