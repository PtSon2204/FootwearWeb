@{
	ViewData["title"] = "List Wishlist";
	var key = 0;
}
<h1>List Product</h1>
<table class="table" id="myTable">
	<thead>
		<tr>
			<th>Id</th>
			<th>Product Name</th>
			<th>Product Description</th>
			<th>Product Price</th>
			<th>Product Image</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		@if (Model != null)
		{
			@foreach (var wishlist_product in Model)
			{
				key++;
				<tr>
					<td>@key</td>
					<td>@wishlist_product.Product.Name</td>
					<td>@Html.Raw(@wishlist_product.Product.Description)</td>
					<td>@wishlist_product.Product.Price.ToString("#, ##0 VNĐ")</td>
					<td><img src="~/media/products/@wishlist_product.Product.Image" width="120" /></td>
					<td>
						<a asp-action="DeleteWishlist" class="btn btn-danger btn-sm confirmDeletion" asp-controller="Home" asp-route-Id="@wishlist_product.Product.Id">Delete</a>
					</td>
				</tr>
			}
		}
		else
		{
			<tr>
				<td colspan="5">Không có sản phẩm nào được tìm thấy.</td>
			</tr>
		}

	</tbody>
</table>

