@model AppUserModel
@{
	ViewData["Title"] = "Get a new Password";
}
<section id="">
	<div class="container" style="margin-bottom: 33px;">
		<div class="row">
			<div class="col-sm-8 col-sm-offset-1">
				<div class="login-form">
					<h2>Reset a new Password</h2>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<form asp-action="UpdateNewPassword" asp-controller="Account">
						<input type="hidden" name="token" value="@ViewBag.Token"/>
						<div class="form-group">
							<label>Email</label>
							<input asp-for="Email" readonly value="@ViewBag.Email" class="form-control" />
							<span asp-validation-for="Email" class="text-danger" />
						</div>
						<div class="form-group">
							<label>Password</label>
							<input asp-for="PasswordHash" class="form-control" />
							<span asp-validation-for="PasswordHash" class="text-danger" />
						</div>

						<button class="btn btn-default">Change</button>
						<a asp-action="Create" asp-controller="Account"> Sign in </a><br />
					</form>
				</div>
			</div>

		</div>
	</div>
</section>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}

