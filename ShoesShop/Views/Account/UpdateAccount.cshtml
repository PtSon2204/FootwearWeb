@model AppUserModel
@{
	ViewData["Title"] = "Update Account Information";
}
<section id="">
	<!--form-->
	<div class="container">
		<div class="row" style="margin-bottom: 33px;">

			<div class="col-sm-8 col-sm-offset-1">
				<div class="signup-form">
					<h2>Update Information!</h2>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<form asp-action="UpdateInfoAccount" asp-controller="Account">
						<input type="hidden" asp-for="Id"/>
						<div class="form-group">
							<label>Username</label>
							<input readonly asp-for="UserName" class="form-control" />
							<span asp-validation-for="UserName" class="text-danger" />
						</div>
						<div class="form-group">
							<label>Email</label>
							<input readonly asp-for="Email" class="form-control" />
							<span asp-validation-for="Email" class="text-danger" />
						</div>
						<div class="form-group">
							<label>PhoneNumber</label>
							<input asp-for="PhoneNumber" class="form-control" />
							<span asp-validation-for="PhoneNumber" class="text-danger" />
						</div>
						<div class="form-group">
							<button class="btn btn-primary">Update</button>
						</div>
						<a href="#">Change password</a>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
